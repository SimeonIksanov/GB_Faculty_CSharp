@model WebApp.ViewModels.PortfolioViewModel

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>PortfolioViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
