@using PortfolioLib.Models
@model IEnumerable<PortfolioLib.Models.Portfolio>
@{
    ViewData["Title"] = "My Portfolios";
}

<h3>
    Porfolios
</h3>
@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Account</th>
                <th>Total Gain</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach(Portfolio item in Model)
        {
            <tr>
                <td>
                    @item.PortfolioId
                </td>
                <td>
                    <a asp-controller="Portfolio" asp-action="Details" asp-route-id="@item.PortfolioId">@item.Account</a>
                </td>
                <td>
                    @item.Stocks.Sum(s=>s.TotalGain).ToString()
                </td>
                <td>
                    <a asp-controller="Portfolio" asp-action="Edit" asp-route-id="@item.PortfolioId"><i class="fas fa-edit"></i></a>
                </td>
                <td>
                    <a asp-controller="Portfolio" asp-action="Delete" asp-route-id="@item.PortfolioId" class="text-danger"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
<a asp-action="Create" asp-controller="Portfolio">Add one</a>
