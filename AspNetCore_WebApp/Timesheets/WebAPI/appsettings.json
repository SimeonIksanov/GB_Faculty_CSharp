{
  "ConnectionStrings": {
    "DefaultDatabase": "Data Source=TimeSheets.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Authentication": {
    "JwtOptions": {
      "Issuer": "http://localhost:5001",
      "Audience": "http://localhost:5001",
      "SigningKey": "SUPERSECRETKEY_IT_SHOULD_NOT_BE_VERY_SHORT",
      "AccessLifetime": 5,
      "RefreshLifetime": 60
    }
  },
  "AllowedHosts": "*"
}
